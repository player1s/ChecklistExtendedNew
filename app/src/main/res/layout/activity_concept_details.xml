<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorlayoutForMap"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarInDetails"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"

            app:popupTheme="@style/AppTheme.PopupOverlay">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnTimeLineInDetails"
                android:text="Timeline"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnTodosInDetails"
                android:text="Todos"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnMapInDetails"
                android:text="Map"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnWeekInDetails"
                android:text="Week"/>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- <include layout="@layout/content_main" /> -->

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabInDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        app:srcCompat="@android:drawable/ic_dialog_email" />

    <TextView
        android:id="@+id/NameInDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="60dp"
        android:text="Name" />

    <EditText
        android:id="@+id/editNameInDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="80dp"
        android:ems="10"
        android:inputType="textMultiLine" />

    <TextView
        android:id="@+id/DefinitionInDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="150dp"
        android:text="Definition" />

    <EditText
        android:id="@+id/editDefinitionInDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="170dp"
        android:ems="10"
        android:inputType="textMultiLine" />

    <TextView
        android:id="@+id/GlossaryInDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="240dp"
        android:text="Glossary" />

    <EditText
        android:id="@+id/editGlossaryInDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="260dp"
        android:ems="10"
        android:inputType="textMultiLine" />

    <TextView
        android:id="@+id/ThingsItIsBuiltFromInDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="320dp"
        android:text="Things it is built from" />

    <EditText
        android:id="@+id/editThingsItIsBuiltFromInDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="340dp"
        android:ems="10"
        android:inputType="textMultiLine" />

    <TextView
        android:id="@+id/PlansInDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="410dp"
        android:text="Plans" />

    <EditText
        android:id="@+id/editPlansInDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="430dp"
        android:ems="10"
        android:inputType="textMultiLine" />

    <TextView
        android:id="@+id/UsesInDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="500dp"
        android:text="Where it is used" />

    <EditText
        android:id="@+id/editUsesInDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="520dp"
        android:ems="10"
        android:inputType="textMultiLine" />

    <TextView
        android:id="@+id/PurposeInDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="590dp"
        android:text="Purpose" />

    <EditText
        android:id="@+id/editPurposeInDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="610dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:overScrollMode="always"/>


</androidx.coordinatorlayout.widget.CoordinatorLayout>